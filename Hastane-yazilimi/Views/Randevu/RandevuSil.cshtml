@using Hastane_yazilimi.Models
@model List<RandevuTable>
@{
    ViewBag.Title = "RandevuSil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RandevuSil</h2>



<table class="table table-bordered">
    <tr>
        <th>Randevu No</th>
        <th>Hasta Adı Soyadı</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.RandevuNo</td>
            <td>Hastaİsmi Gelicek</td>
            <td>@x.RandevuTarihi</td>
            <td>@x.Aciklama</td>
            <td><a href="/Randevu/RandevuSilmek/@x.SıraNo" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>

<td><a href="/" class="btn btn-primary">Ana Sayfaya Dön</a></td>
